{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@/*": ["../*"],
            "@configs/*": ["configs/*"],
            "@elements/*": ["components/elements/*"],
            "@layouts/*": ["components/layouts/*"],
            "@modules/*": ["components/modules/*"],
            "@templates/*": ["components/templates/*"],
            "@contexts/*": ["context/*"],
            "@hooks/*": ["hooks/*"],
            "@utils/*": ["utils/*"],
            "@styles/*": ["../public/styles/*"],
            "@assets/*": ["../public/assets/*"]
        }
    },
    "exclude": ["node_modules"]
}